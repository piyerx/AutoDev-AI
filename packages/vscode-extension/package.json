{
  "name": "autodev-vscode",
  "displayName": "AutoDev - Codebase Onboarding AI",
  "description": "AI-powered codebase onboarding: architecture maps, walkthroughs, Q&A",
  "version": "0.1.0",
  "publisher": "autodev",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autodev.showExplorer",
        "title": "AutoDev: Show Codebase Explorer"
      },
      {
        "command": "autodev.askQuestion",
        "title": "AutoDev: Ask About This Codebase"
      },
      {
        "command": "autodev.startWalkthrough",
        "title": "AutoDev: Start Walkthrough"
      },
      {
        "command": "autodev.showNodeDetail",
        "title": "AutoDev: Show Module Detail"
      },
      {
        "command": "autodev.refreshCodeLens",
        "title": "AutoDev: Refresh Architecture Annotations"
      },
      {
        "command": "autodev.selectLanguage",
        "title": "AutoDev: Select Language"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autodev",
          "title": "AutoDev",
          "icon": "$(compass)"
        }
      ]
    },
    "views": {
      "autodev": [
        {
          "type": "webview",
          "id": "autodev.explorerView",
          "name": "Codebase Explorer"
        }
      ]
    },
    "configuration": {
      "title": "AutoDev",
      "properties": {
        "autodev.repoId": {
          "type": "string",
          "default": "",
          "description": "Repository identifier (owner/repo) for AutoDev"
        },
        "autodev.language": {
          "type": "string",
          "default": "en",
          "enum": ["en", "hi", "ta", "te", "kn", "bn", "mr"],
          "enumDescriptions": [
            "English",
            "Hindi (हिन्दी)",
            "Tamil (தமிழ்)",
            "Telugu (తెలుగు)",
            "Kannada (ಕನ್ನಡ)",
            "Bengali (বাংলা)",
            "Marathi (मराठी)"
          ],
          "description": "Language for AI-generated explanations"
        },
        "autodev.fresherMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable simpler explanations for beginners"
        }
      }
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "dev": "pnpm build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'No linter configured yet'",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "^22.0.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0"
  }
}
